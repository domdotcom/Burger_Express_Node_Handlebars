 {{!-- * Setup the `index.handlebars` to have the template that Handlebars can render onto. --}}
  {{!-- * Create a button in `index.handlebars` that will submit the user input into the database. --}}

 <header>
  <img src="https://freesvg.org/img/1528816416.png" class="mx-auto d-block" alt="cute burger" />
  <h1 class="text-center"><u>EAT-DA-BURGERS!</u></h1>
</header>
<div class="container">
  <div class="row">
    <div class="burger-box col-6">
      <h2>Burgers for eating!!</h2>

      <ul>
        {{#each burgers}}
        {{#unless eaten}}
        <li>
          {{name}}
          <button class="devour-btn btn btn-success btn-sm float-right" data-id="{{id}}"
            data-devoured="{{eaten}}">EAT IT!</button>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="burger-box col-6">
      <h2>YOU ATE THESE BURGERS!</h2>

      <ul>
        {{#each burgers}}
        {{#if eaten}}
        <li>
          {{name}}
          <button class="delete-btn btn btn-danger btn-sm float-right" data-id="{{id}}">DELETE!</button>
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>
<div class="add-burger text-center">
  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="newBurg">Burger Name:</label>
      <input type="text" id="newBurg" name="name">
    </div>
    <button type="submit">Add Burger</button>
  </form>
</div> 